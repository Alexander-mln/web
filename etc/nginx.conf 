server {
    listen       80 default_server;
    server_name  everythingelse;
    error_page   404
    location     /uploads/  {
      root       /home/box/web/uploads;
    }
    location  ~* ^.+\/.+\..+$ {
      root       /home/box/web/public;
    }
    location   ~* .+\/${
      return 404
    }
}